<Window x:Class="GUI.DataAnalysis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="DataAnalysis" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
         ResizeMode="NoResize">


    <Grid Style="{StaticResource GridBackground}">


        <StackPanel Margin="0,0,10,34">
            <TextBlock x:Name="title"  TextWrapping="Wrap" Text="Hisotira wypożyczeń" Foreground="White" HorizontalAlignment="Center" FontSize="20"  Width="622" VerticalAlignment="Center" TextAlignment="Center" Margin="0,10,0,10"/>
            <DataGrid x:Name="historyGrid"   Style="{StaticResource modernDataGrid}" HorizontalAlignment="Stretch" FontSize="15"/>
        </StackPanel>
        <Button Style="{StaticResource registrationButtons}" Content="Powrót"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,10,0,5" Width="61" Click="Button_Click"/>

    </Grid>
</Window>
