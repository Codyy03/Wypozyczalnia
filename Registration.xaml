<Window x:Class="GUI.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Registration" Height="619" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Style="{StaticResource GridBackground}">

        <WrapPanel Orientation="Vertical" Height="604" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock   TextWrapping="Wrap" Text="Rejestracja" VerticalAlignment="Top" Width="460" FontSize="35" TextAlignment="Center" IsEnabled="False" Margin="0,8,0,30" Background="Black" Foreground="White"/>

            <TextBlock Text="Pesel*:" Style="{StaticResource registrationTexts}"/>
            <TextBox x:Name="peselCustomerInput"  MaxLength="11" Style="{StaticResource registrationInputs}" PreviewTextInput="peselCustomerInput_PreviewTextInput" PreviewKeyDown="peselCustomerInput_PreviewKeyDown"  />
            <TextBlock  Text="Imie*:" Style="{StaticResource registrationTexts}"/>
            <TextBox x:Name="userName" Style="{StaticResource registrationInputs}"/>
            <TextBlock  Text="Nazwisko*:" Style="{StaticResource registrationTexts}"/>
            <TextBox x:Name="userLastName" Style="{StaticResource registrationInputs}"/>
            <TextBlock   Text="Email:" Style="{StaticResource registrationTexts}"/>
            <TextBox x:Name="userEmail" Style="{StaticResource registrationInputs}"/>
            <TextBlock  TextWrapping="Wrap" Text="Telefon*:" Style="{StaticResource registrationTexts}"/>
            <TextBox x:Name="userPhonNumber" MaxLength="9"   Style="{StaticResource registrationInputs}" Margin="0,0,0,30" PreviewTextInput="userPhonNumber_PreviewTextInput" PreviewKeyDown="userPhonNumber_PreviewKeyDown"   />
            <Button Style="{StaticResource registrationButtons}"  x:Name="registrationButton" Content="Zarejestruj"  Width="158" Height="39" FontSize="20"  Margin="0,0,0,30" Click="registrationButton_Click"/>
            <TextBlock x:Name="registratioNotification"  TextWrapping="Wrap" Text="" Width="287" FontSize="18" TextAlignment="Center" Margin="0,0,0,15" Foreground="#FFFF1717" FontWeight="Bold"/>

        </WrapPanel>
        <Button x:Name="backToLogin" Content="Zaloguj" HorizontalAlignment="Right" VerticalAlignment="Top" Click="backToLogin_Click" Margin="0,10,10,9" Width="100" Height="35" Style="{StaticResource registrationButtons}" />



    </Grid>
</Window>
