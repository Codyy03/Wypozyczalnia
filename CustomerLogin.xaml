<Window x:Class="GUI.CustomerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CustomerLogin"
        Height="450" Width="838"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Style="{StaticResource GridBackground}">
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Height="414">
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Zaloguj się" VerticalAlignment="Top" Width="460" FontSize="35" TextAlignment="Center" IsEnabled="False" Margin="0,0,0,60" Foreground="White"/>
            <TextBlock  Text="Pesel:" VerticalAlignment="Top" Style="{StaticResource registrationTexts}" />
            <TextBox x:Name="peselCustomerInput" MaxLength="11" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Margin="0,0,0,30.3" PreviewKeyDown="peselCustomerInput_PreviewKeyDown" PreviewTextInput="peselCustomerInput_PreviewTextInput"  />
            <Button x:Name="checkPasswordCustomer" Content="Zaloguj" Style="{StaticResource registrationButtons}" Width="158" Height="40" FontSize="20" Click="checkPassword_Click" Margin="0,0,0,10"/>
            <TextBlock x:Name="wrongPeselNotification"   TextWrapping="Wrap" Text="Użytkownik o podanym peselu nie istnieje" Width="246" FontSize="14" TextAlignment="Center" Foreground="Red" FontWeight="Bold" Margin="0,0,0,30" Visibility="Hidden"/>
            <TextBlock  Text="Nie masz konta?"  Style="{StaticResource registrationTexts}" Width="136" />
            <Button x:Name="toRegistrationButton" Content="Zarejestruj się" Style="{StaticResource registrationButtons}" HorizontalAlignment="Center" Width="158" Height="39" FontSize="20" Click="toRegistrationButton_Click" />

        </WrapPanel>
        <TextBlock Text="Logowanie administratora" Style="{StaticResource registrationTexts}" HorizontalAlignment="Right" FontSize="14" VerticalAlignment="Top" Margin="0,5,0,15"/>
        <Button x:Name="ChangeToAdminLoginButton" Content="Zaloguj" Style="{StaticResource registrationButtons}" HorizontalAlignment="Right"  VerticalAlignment="Top"  Width="92" Click="ChangeToAdminLoginButton_Click" Margin="0,47,10,0" Height="27"/>
    </Grid>
</Window>
